{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs!{% endblock %}

{% block body %}
    <h1 class="h1 mb-3 font-weight-normal text-center">Fiche {{ user.firstName }} {{ user.lastName }}</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            {% if is_granted('ROLE_ADMIN') %}
            <th>Rôle</th>
            <th>Dernière connexion</th>
            {% endif %}
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

            <tr>
                <td>{{ user.userName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                <td>{{ user.roles[0] }}</td>
                <td>{{ user.lastConnection ? user.lastConnection|date('d-m-Y H:i:s') : '-' }}</td>
            </tr>
                {% endif %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_list') }}" class="btn btn-primary">Voir tout</a>
        <a href="{{ path('app_center_list') }}" class="btn btn-primary">Voir les centres</a>
        <a href="{{ path('app_trainer_list') }}" class="btn btn-primary">Voir les formateurs</a>
    {% endif %}

{% endblock %}
