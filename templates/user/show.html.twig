{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs!{% endblock %}

{% block body %}
    <section id="userDetail">
        <h1 class="h1 mb-3 font-weight-normal text-center">Fiche {{ user.firstName }} {{ user.lastName }}</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <th>Dernière connexion</th>
                    <td>{{ user.userName }}</td>
                </tr>
                <tr>
                    <th>Rôle</th>
                    <td>{{ user.roles[0] }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Domaines d'activité</th>
                <td>{{ user.domain }}</td>
            </tr>
        </table>


        <div class="d-flex justify-content-end">
            {% if is_granted('ROLE_CENTER') %}
                <a href="{{ path('app_trainer_list') }}" class="btn btn-primary mx-2">Retour liste</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_user_list') }}" class="btn btn-primary mx-2">Retour liste utilisateurs</a>
                <a href="{{ path('app_center_list') }}" class="btn btn-primary mx-2">Voir les centres</a>
                <a href="{{ path('app_trainer_list') }}" class="btn btn-primary mx-2">Voir les formateurs</a>
            {% endif %}
        </div>
    </section>
{% endblock %}
