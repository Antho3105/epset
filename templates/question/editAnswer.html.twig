{% extends 'base.html.twig' %}

{% block title %}Modifier réponse{% endblock %}

{% block body %}
    <section>
        <h1 class="h1 mb-3 font-weight-normal text-center">Modifier la réponse</h1>

        <div class="form pb-5">
            {{ form_start(form) }}
            <div class="d-flex justify-content-center">
                {{ form_row(form.value) }}
            </div>

            <div class="d-flex justify-content-end">

                <button class="btn btn-success"><i class="fa-solid fa-check"></i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
