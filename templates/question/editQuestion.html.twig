{% extends 'base.html.twig' %}

{% block title %}Modifier question{% endblock %}

{% block body %}
    <section>
        <h1 class="h1 mb-3 font-weight-normal text-center">Modifier question</h1>

        <div class="form pb-5">
            {{ form_start(form) }}
            <div class="d-flex justify-content-center">
                {{ form_row(form.question) }}
            </div>

            <label>
                <input onclick="toggleImgInput()" type="checkbox"> Ajouter une image
            </label>
            <div class="addImg flex center pb-5">
                <div>
                    {{ form_row(form.imgFileName) }}
                    <img class="preview" src="{{ asset('./surveyQuestion_img/no_image.jpg') }}" alt="">
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a class="btn btn-info mx-2" href="{{ path('app_question_show', {'id': question.id}) }}" title="Retour"><i class="fa-solid fa-arrow-left"></i></a>
                <button class="btn btn-success"><i class="fa-solid fa-check"></i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
