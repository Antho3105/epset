<!DOCTYPE html>
<html lang="FR">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}epset.fr{% endblock %}</title>
    <meta name="description"
          content="Ce site est conçu pour les centres de formations afin de leur permettre de sélectionner les candidats grâce à des questionnaires"/>
    <link rel="icon" type="image/png" sizes="32x32" href="{{  asset('img/favicon-32x32.png') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <script src="https://cdn.tiny.cloud/1/z2nwxnkua80b92x35rlkwpcdk5spy261hkv1vd1tf9yva2fd/tinymce/6/tinymce.min.js"
            referrerpolicy="origin"></script>
    {% block stylesheets %}
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

</head>
<body>
<header>
    {% block menu %}
        {% include "main/components/menu.html.twig" %}
    {% endblock %}
</header>
<main class="container">
    {% for message in app.flashes('notice') %}
        <div class="container flashMessage alert alert-info alert-dismissible fade show" role="alert">
            <div class="container">
                <strong>     {{ message }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="container flashMessage alert alert-success alert-dismissible fade show" role="alert">
            <div class="">
                <strong>     {{ message }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('alert') %}
        <div class="container flashMessage alert alert-danger alert-dismissible fade show" role="alert">
            <div class="container">
                <strong>     {{ message }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    {% endfor %}
    {% block body %}{% endblock %}
</main>
<footer>
    {% block footer %}

        {% include "main/components/footer.html.twig" %}
    {% endblock %}
</footer>

{% block javascripts %}
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('js/js.js') }}"></script>
{% endblock %}

</body>
</html>
