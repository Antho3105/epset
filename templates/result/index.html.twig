{% extends 'base.html.twig' %}

{% block title %}Liste des résultats{% endblock %}

{% block body %}
    <section>
        <h1 class="h1 mb-3 font-weight-normal text-center">Liste des résultats par formation</h1>

        {% for course in app.user.courses %}
            {% if course.deleteDate is null %}
                <div>
                <h2 class="h2 mb-3 font-weight-normal text-center">{{ course.title }} :</h2>
                <div class="flex">
                    {% for result in results %}
                        {% if result.survey.course == course %}
                            <div class="card">
                                <div class="card-header">
                                    {{ result.candidate }}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Formation : {{ result.survey.course }}</h5>
                                    <p class="card-text">Score : {{ result.score }} % </p>
                                    <div class="d-flex justify-content-end">
                                        <a href="{{ path('app_result_show', {'id': result.id}) }}"
                                           class="btn btn-primary">Voir</a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            </div>
        {% endfor %}

        {% if is_granted('ROLE_ADMIN') %}
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date du test</th>
                    <th>Nombre de questions lues</th>
                    <th>Nombre de réponses</th>
                    <th>Score</th>
                    <th>Token</th>
                    <th>DeleteDate</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td>{{ result.id }}</td>
                        <td>{{ result.testDate ? result.testDate|date('d-m-Y H:i') : '-' }}</td>
                        <td>{{ result.viewedQuestion is null ? '-' : result.viewedQuestion }}</td>
                        <td>{{ result.answeredQuestion is null ? '-': result.answeredQuestion }}</td>
                        <td>{{ result.score ?: '-' }}</td>
                        <td>{{ result.token }}</td>
                        <td>{{ result.deleteDate ? result.deleteDate|date('Y-m-d H:i:s') : '-' }}</td>
                        <td>
                            <a href="{{ path('app_result_show', {'id': result.id}) }}">Voir</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Pas de résultats</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <div class="d-flex justify-content-end">
        <a class="btn btn-primary" href="{{ path('app_result_new') }}">Créer nouvelle fiche</a>
        </div>
    </section>
{% endblock %}
