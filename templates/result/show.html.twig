{% extends 'base.html.twig' %}

{% block title %}Résultats{% endblock %}

{% block body %}
    <h1 class="h1 mb-3 font-weight-normal text-center">Résultat</h1>

    <table class="table">
        <tbody>

        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ result.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Date du test</th>
                <td>{{ result.testDate ? result.testDate|date('d-m-Y H:i') : '' }}</td>
            </tr>
        <tr>
            <th>Nom de la formation</th>
            <td>{{ result.survey.course.title }}</td>
        </tr>
            <tr>
                <th>Nombre de questions lues</th>
                <td>{{ result.viewedQuestion }}</td>
            </tr>
            <tr>
                <th>Nombre de question répondues</th>
                <td>{{ result.answeredQuestion }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ result.score }}</td>
            </tr>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Token</th>
                <td>{{ result.token }}</td>
            </tr>
            <tr>
                <th>DeleteDate</th>
                <td>{{ result.deleteDate ? result.deleteDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_result_index') }}">Retour liste</a>


    {{ include('result/_delete_form.html.twig') }}
{% endblock %}
