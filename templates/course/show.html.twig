{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1 class="h1 mb-3 font-weight-normal text-center">Détails formation</h1>

    <table class="table table-striped table-hover">
        <tbody>
        <tr>
            <th>Ref</th>
            <td>{{ course.ref }}</td>
        </tr>
        <tr>
            <th>Level</th>
            <td>{{ course.level }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ course.title }}</td>
        </tr>
        <tr>
            <th>Detail</th>
            <td>{{ course.detail }}</td>
        </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_CENTER') %}
    <h2 class="h3 mb-3 font-weight-normal text-center">Formateurs assignés</h2>

    {% for user in course.visibleCourses %}
        <ul>
            <li>
                <p>{{ user }}</p>
                {{ include('visible_course/_delete_form.html.twig') }}

            </li>
        </ul>
    {% endfor %}
    {% endif %}

    <div class="d-flex justify-content-between mt-5">
        <div class="d-flex">
        <a class="btn btn-primary mx-2" href="{{ path('app_course_index') }}">Retour liste</a>
        {% if is_granted('ROLE_CENTER') %}
        <a class="btn btn-primary mx-2 " href="{{ path('app_course_edit', {'id': course.id}) }}">Modifier</a>
        {{ include('course/_delete_form.html.twig') }}
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('course/_reset_form.html.twig') }}
        {% endif %}
        </div>

        <div>
            <a class="btn btn-primary mx-2 " href="{{ path('app_survey_new', {'id': course.id}) }}">Créer questionnaire</a>

        </div>
    </div>
{% endblock %}
