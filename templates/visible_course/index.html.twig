{% extends 'base.html.twig' %}

{% block title %}VisibleCourse index{% endblock %}

{% block body %}
    <h1>VisibleCourse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visible_course in visible_courses %}
            <tr>
                <td>{{ visible_course.id }}</td>
                <td>
                    <a href="{{ path('app_visible_course_show', {'id': visible_course.id}) }}">show</a>
                    <a href="{{ path('app_visible_course_edit', {'id': visible_course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_visible_course_new') }}">Create new</a>
{% endblock %}
